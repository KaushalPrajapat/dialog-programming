PROCESS BEFORE OUTPUT.


  MODULE status_0200.
*&SPWIZARD: PBO FLOW LOGIC FOR TABLECONTROL 'TC1'
  MODULE tc1_change_tc_attr.
*&SPWIZARD: MODULE TC1_CHANGE_COL_ATTR.
  LOOP AT   lt_family
       INTO ls_family
       WITH CONTROL tc1
       CURSOR tc1-current_line.
    MODULE tc1_get_lines.
*&SPWIZARD:   MODULE TC1_CHANGE_FIELD_ATTR
  ENDLOOP.
*&SPWIZARD: PBO FLOW LOGIC FOR TABLECONTROL 'TC2'
  MODULE TC2_CHANGE_TC_ATTR.
*&SPWIZARD: MODULE TC2_CHANGE_COL_ATTR.
  LOOP AT   LT_EMP_EXP
       INTO LS_EMP_EXP
       WITH CONTROL TC2
       CURSOR TC2-CURRENT_LINE.
    MODULE TC2_GET_LINES.
*&SPWIZARD:   MODULE TC2_CHANGE_FIELD_ATTR
  ENDLOOP.


*
PROCESS AFTER INPUT.
*&SPWIZARD: PAI FLOW LOGIC FOR TABLECONTROL 'TC2'
  LOOP AT LT_EMP_EXP.
    CHAIN.
      FIELD LS_EMP_EXP-SNO.
      FIELD LS_EMP_EXP-COMPANY.
      FIELD LS_EMP_EXP-FDATE.
      FIELD LS_EMP_EXP-TDATE.
      FIELD LS_EMP_EXP-DESINATION.
      FIELD LS_EMP_EXP-CTC.
      MODULE TC2_MODIFY ON CHAIN-REQUEST.
    endchain.
    FIELD LS_EMP_EXP-MARK
      MODULE TC2_MARK ON REQUEST.
  ENDLOOP.
  MODULE TC2_USER_COMMAND.
*&SPWIZARD: MODULE TC2_CHANGE_TC_ATTR.
*&SPWIZARD: MODULE TC2_CHANGE_COL_ATTR.

*&SPWIZARD: PAI FLOW LOGIC FOR TABLECONTROL 'TC1'
  LOOP AT lt_family.
    CHAIN.
      FIELD ls_family-relationship.
      FIELD ls_family-name.
      FIELD ls_family-gender.
      FIELD ls_family-dob.
      FIELD ls_family-age.
      MODULE tc1_validation.
      MODULE tc1_modify ON CHAIN-REQUEST.
    ENDCHAIN.
    FIELD ls_family-mark
      MODULE tc1_mark ON REQUEST.
  ENDLOOP.
  MODULE tc1_user_command.
*&SPWIZARD: MODULE TC1_CHANGE_TC_ATTR.
*&SPWIZARD: MODULE TC1_CHANGE_COL_ATTR.

  MODULE user_command_0200.

  MODULE exit AT EXIT-COMMAND.
